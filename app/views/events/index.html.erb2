<h1>イベント一覧</h1>

<table>
  <tr>
    <th>イベント名</th>
    <th>開催日</th>
    <th>開催場所</th>
    <th>定員</th>
    <th>申込期限</th>
    <th>主催者</th>

  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= link_to event.name, event %></td>
    <td><%= I18n.l event.date, :format => :short %></td>
    <td><%=h event.placename %></td>
    <td><%=h event.capacity %></td>
    <td><%= I18n.l event.join_end, :format => :short %></td>
    <td><%=h event.host %></td>
  </tr>
<% end %>
</table>
