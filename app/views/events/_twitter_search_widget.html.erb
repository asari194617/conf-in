<script src="https://widgets.twimg.com/j/2/widget.js"></script>
<script>
	new TWTR.Widget({
		version: 2,
		type: 'search',
		search: '<%=raw event_url(@event) %>',
		interval: 30000,
		title: '<%=raw event_url(@event) %>',
		subject: '<%= @event.name %>',
		width: 'auto',
		height: 300,
		theme: {
			shell: {
				background: '#8ec1da',
				color: '#ffffff'
			},
			tweets: {
				background: '#ffffff',
				color: '#444444',
				links: '#1985b5'
			}
		},
		features: {
			scrollbar: true,
			loop: true,
			live: true,
			hashtags: true,
			timestamp: true,
			avatars: true,
			toptweets: true,
			behavior: 'default'
		}
	}).render().start();
</script>
