= render partial: 'like_init'

.maintable
  %h1= @event.name
  %hr
  
  %h2 イベント概要
  %hr
  = sanitize @event.summary
  = render partial: 'detail'
  
  %h2 
    このイベントに関連するツイート
    = render partial: 'tweet_button'
    = render partial: 'like_button'
  
  %hr
  -# TODO : 関連ツイートJavaScript埋め込み
  = render partial: 'twitter_search_widget'
  %hr
  %br
  = link_to 'イベント一覧ページに戻る', events_path

.sidetable
  %div{ align: 'center' }
    -# TODO : ツイートボタンの設置
    = render(partial: "admin_link") if (!current_user.nil?) && (current_user.id == @event.owner_user_id)
    = render partial: 'join_link'
    = render partial: 'status'
    = render partial: 'entries'
