<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">
  $(function() {
    var geocoder = new google.maps.Geocoder();
    var latlng = new google.maps.LatLng(34.6431066, 134.9971787);
    var myOptions = {
      zoom: 5,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    }
    var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
    var directionsDisplay = new google.maps.DirectionsRenderer({suppressMarkers: true});
    directionsDisplay.setMap(map);
    var directionsService = new google.maps.DirectionsService();

    <% @event.entries.each do |entry| %>
      <% user = entry.user %>
      geocoder.geocode( { 'address': "<%= user.domicile %>"}, function(results, status) {
        if (status == google.maps.GeocoderStatus.OK) {
          new google.maps.Marker({
            map: map,
            position: results[0].geometry.location,
            title: "<%= user.name %>",
            icon: "http://falconsrv.net/cgi-bin/twicon.pl/<%= user.tw_id %>/mini"
          });
        } else {
          //alert("Geocode was not successful for the following reason: " + status);
        }
      });
    <% end %>
      
    var address = "<%= @event.place_address %>";
    var marker;
    geocoder.geocode( { 'address': address}, function(results, status) {
      if (status == google.maps.GeocoderStatus.OK) {
        map.setCenter(results[0].geometry.location);
        new google.maps.Marker({
          map: map,
          position: results[0].geometry.location
        });
      } else {
        //alert("Geocode was not successful for the following reason: " + status);
        document.getElementById("map_canvas").style.display = "none";
        document.getElementById("map").style.display = "block";
      }
    });

    <% if @user && @user.domicile %>
    address = "<%= @user.domicile %>";
    geocoder.geocode( { 'address': address}, function(results, status) {
      if (status == google.maps.GeocoderStatus.OK) {
        new google.maps.Marker({
          map: map,
          position: results[0].geometry.location,
          icon: "http://maps.google.com/mapfiles/kml/pal2/icon10.png"
        });
        directionsService.route({
            origin: "<%= @user.domicile %>",
            destination: "<%= @event.place_address %>",
            travelMode: google.maps.DirectionsTravelMode.DRIVING
          }, function(response, status) {
            if (status == google.maps.DirectionsStatus.OK) {
              directionsDisplay.setDirections(response);
            } else { }
          }
        );
      } else {
        //alert("Geocode was not successful for the following reason: " + status);
      }
    });
    <% end %>
  });
</script>
