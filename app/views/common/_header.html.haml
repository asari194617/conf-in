= link_to 'カンファイン', root_path, class: 'brand'
%ul.nav
  %li= link_to 'イベント作成', new_event_path
  %li= link_to 'イベント一覧', events_path
  -if current_user
    %li= link_to 'プロフィール', user_path(current_user)

%ul.nav.secondary-nav
  -if current_user
    %li.dropdown{data: {dropdown: :dropdown}}
      -#= twicon_tag current_user.tw_id, :mini
      = link_to "#{current_user.name}", '#', class: 'dropdown-toggle'
      %ul.dropdown-menu
        %li= link_to '設定', edit_user_registration_path
        %li.divider
        %li= link_to 'ログアウト', destroy_user_session_path, method: :delete
  -else
    %li= link_to 'ユーザ登録', new_user_registration_path
    %li.dropdown{data: {dropdown: :dropdown}}
      = link_to 'ログイン', new_user_session_path
