!!!
%html
  %head
    %title= title
    = stylesheet_link_tag     "application"
    = javascript_include_tag  "application"
    = csrf_meta_tags
  %body
    -if notice
      .alert-message.info.hide
        = notice
    -if alert
      .alert-message.warning.hide
        = alert

    .topbar
      .fill
        .container
          = render partial: 'common/header'
    .container
      .content= yield
