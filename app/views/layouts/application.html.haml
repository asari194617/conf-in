!!!
%html
  %header
    %meta{'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8'}
    %title= title
    = stylesheet_link_tag     "application"
    = javascript_include_tag  "application"
    = csrf_meta_tags
  %body
    -if notice
      .alert-message.info.hide
        = notice
    -if alert
      .alert-message.warning.hide
        = alert
    -if danger = flash[:danger]
      .alert-message.danger.hide
        = danger

    .topbar
      .topbar-inner
        .container
          = render partial: 'common/header'
    .container
      .content= yield
