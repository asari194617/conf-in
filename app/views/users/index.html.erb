<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.memo %></td>
    <td><%= user.website %></td>
    <td><%= user.qr_secret %></td>
    <td><%= user.job %></td>
    <td><%= user.office %></td>
    <td><%= user.domicile %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
