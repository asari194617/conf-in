.page-header
  %h1 パスワード再発行申請
.row
  .span8
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      %p
        = f.label :email
        .input= f.email_field :email, class: 'span5'
      .actions
        = f.submit "申請する", class: 'btn primary'
        = link_to 'キャンセル', :back, class: :btn
    .well
      = render :partial: "user/shared/links"