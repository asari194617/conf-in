%h1 新規ユーザ登録
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label 'メールアドレス'
    %span.required ※必須
    %br/
    = f.email_field :email
  %p
    = f.label 'パスワード'
    %span.required ※必須
    %br/
    = f.password_field :password
  %p
    = f.label 'パスワードの確認入力'
    %span.required ※必須
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label 'ニックネーム'
    %span.required ※必須
    %br/
    = f.text_field :name
  %p
    = f.label 'Twitter ID'
    %br/
    @
    = f.text_field :tw_id
  %p= f.submit
= render :partial => "user/shared/links"
