.page-header
  %h1 新規ユーザ登録
.row
  .span8
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!

      %p
        = f.label :email
        .input
          = f.email_field :email, placeholder: 'メールアドレス'
          %span.require ※必須
      %p
        = f.label :password
        .input
          = f.password_field :password, placeholder: 'パスワード'
          %span.require ※必須
      %p
        = f.label :password_confirmation
        .input
          = f.password_field :password_confirmation, placeholder: 'パスワード（確認）'
          %span.require ※必須
      %p
        = f.label :name
        .input
          = f.text_field :name, placeholder: 'ニックネーム'
          %span.require ※必須
      %p
        = f.label :tw_id
        .input
          .input-prepend
            %span.add-on @
            = f.text_field :tw_id, placeholder: 'Twitter ID'
            %span 任意
      .actions
        = f.submit '登録する', class: 'btn primary large'
        
    .well
      = render :partial => "user/shared/links"
